<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="layout_login">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="image_login">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="image_icons">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:alpha">0.5</item>
    </style>
    <style name="layout_input">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:padding">16dp</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="inputStyle" >
        <item name="android:textColor">#000000</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">4</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="buttonLogin" >
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginLeft">56dp</item>
        <item name="android:layout_marginRight">56dp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- HOME STYLES !-->
    <style name="layout_home">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:padding">16dp</item>
        <item name="android:typeface">sans</item>
        <item name="android:background">#2e98d0</item>
    </style>
    <style name="image_home">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:alpha">0.5</item>
    </style>
    <style name="home_welcome" >
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">4</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">30dp</item>

    </style>
    <style name="home_content">
        <item name="android:layout_weight">4</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:padding">16dp</item>
        <item name="android:typeface">sans</item>
    </style>
    <!-- OPTIONS LIST  STYLES !-->
    <style name="layout_optEncuesta">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:padding">16dp</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="layout_optEmpty">
        <item name="android:layout_weight">3</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:padding">16dp</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="opt_style" >
        <item name="android:layout_toRightOf">@id/image_optEncuesta</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="image_iconsopt">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
    <!-- MENU FRAGMENT LEFT SIDE !-->
    <style name="menu_item_fragment">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:alpha">0.5</item>
    </style>
</resources>
